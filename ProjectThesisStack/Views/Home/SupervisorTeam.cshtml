@using ProjectThesisStack.Models ;
@model ProjectThesisStack.Models.NewTeamForm
@{
    ViewBag.Title = "SupervisorTeam";
}

<h2>SupervisorTeam</h2>


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE =edge">
    <meta name="viewport" content="width =device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="~/Content/SupervisorTeam.css" rel="stylesheet">
</head>


<section class="supervisorTeam" onload="clearForm()">
    <form method="post">
        <h3>Add New Team</h3>
        <label for="teamName">Team Name</label>
        @Html.TextBoxFor(m => m.teamName, new { @class = "form-control form-control-sm teamName", @id = "teamName", placeholder = "Three Bits", required = "required" })

        <label for="studentID1">Student 1 ID</label>
        @Html.TextBoxFor(m => m.student1, new { @class = "form-control form-control-sm studentID1", @id = "studentID1", placeholder = "20180104105", required = "required", pattern = "^[0-9].{8,10}$" })
        <label for="studentID2">Student 2 ID</label>
        @Html.TextBoxFor(m => m.student2, new { @class = "form-control form-control-sm studentID2", @id = "studentID2", placeholder = "20180104105", pattern = "^[0-9].{8,10}$" })
        <label for="studentID3">Student 3 ID</label>
        @Html.TextBoxFor(m => m.student3, new { @class = "form-control form-control-sm studentID3", @id = "studentID3", placeholder = "20180104105", pattern = "^[0-9].{8,10}$" })
        <label for="studentID4">Student 4 ID</label>
        @Html.TextBoxFor(m => m.student4, new { @class = "form-control form-control-sm studentID4", @id = "studentID4", placeholder = "20180104105", pattern = "^[0-9].{8,10}$" })

        <label for="teamDP">DP Link</label>
        @Html.TextBoxFor(m => m.dp, new { @class = "form-control form-control-sm teamDP", @id = "teamDP", type = "url", placeholder = "DP Link" })

        <Button type="submit" class="btn btn-success">Create</Button>
    </form>
</section>
<script>
    function clearForm() {
        document.getElementById("teamName").value = "";
        document.getElementById("student1").value = "";
        document.getElementById("student2").value = "";
        document.getElementById("student3").value = "";
        document.getElementById("student4").value = "";
        document.getElementById("dp").value = "";
    }
</script>

<script src="~/bundles/jquery-3.3.1.min.js"></script>
<script src="~/bundles/popper.min.js"></script>
<script src="~/bundles/bootstrap.min.js"></script>
<script src="~/Scripts/JS UI/Notice.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
