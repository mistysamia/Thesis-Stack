@using ProjectThesisStack.Models
@using MongoDB.Bson
@{
    ViewBag.Title = "Teams";
    var studentMap = (Dictionary<ObjectId, Student>)ViewData["studentMap"];
    var supervisorMap = (Dictionary<ObjectId, Supervisor>)ViewData["supervisorMap"];

}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE =edge">
    <meta name="viewport" content="width =device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">





    <style>

        body {
            margin: 0;
            background-color: #ddd0d0;
        }

        .headerImg {
            width: 100%;
            height: 800px;
        }

            .headerImg img {
                width: 100%;
                height: 100%;
            }

        .recentText {
        }


        .leftSection {
        }

        .leftSectionPart {
            background-color: rgba(26, 26, 24, 0.103);
            border-radius: 12px;
        }

        .recentTeams {
            display: grid;
            grid-template-columns: repeat(2,1fr);
            background-color: rgba(209, 205, 205, 0);
            width: 100%;
            margin-top: 7%;
            padding-left: 5%;
            border-radius: 17px;
            margin-left: 1%;
        }

        .recentTeamheading {
            margin-left: 6%;
            margin-top: 5%;
            margin-bottom: -7%;
        }

        /*****************/
        /* Teams Starts */
        /****************/

        .each-TeamSection {
            width: 500px;
        }

        .each-Team {
            margin-top: 40px;
            background-color: rgb(221, 221, 217);
            border-radius: 10px;
            height: 350px;
            width: 92%;
            transition: transform 0.4s ease-in;
            box-shadow: 0px 0px 20px black;
            padding-bottom: 19%;
        }

            .each-Team .imgPart {
                height: 100px;
                width: 130px;
                border: 1px solid red;
                margin: 12% 0% 0% 8%;
                border-radius: 5px;
                box-shadow: 0px 0px 20px rgb(90, 87, 87);
                border: 1px solid rgb(90, 87, 87);
            }

            .each-Team img {
                height: 100%;
                width: 100%;
            }

        .each-card-Design {
            background: rgb(8,7,27);
            background: linear-gradient(90deg, rgba(8,7,27,1) 15%, rgba(30,24,97,1) 50%, rgba(4,5,29,1) 87%);
            height: 80px;
            border-radius: 10px 10px 0px 0px;
        }

        .eachCardLeftPart {
            margin: 6% 0% 0% 10%;
        }

        .headings {
            margin-top: 15%;
            color: rgb(187, 174, 92);
        }

        .headingsPart {
            margin-left: -22%;
        }

            .headingsPart p {
                margin-top: 8%;
                margin-bottom: 9%;
                font-size: 17px;
            }

        .TeamDetailsList {
            font-size: 40px;
        }

        .eachCardRightPart {
            margin-left: 0%;
        }

        .Interest {
            color: rgb(255, 72, 0);
        }

        .InterestPart {
            margin: 2% 5% 0% -21%;
        }

            .InterestPart p {
                font-size: 14px;
            }

        .each-Team:hover {
            transform: scale(1.02);
            transition: transform 0.2s ease-in;
        }

        .eachDetails {
            height: 70px;
            width: 33%;
            margin: -3% 7% 0% -33%;
            text-align: center;
            background-color: #25282b;
            color: thistle;
            border-radius: 5px;
            padding-top: 3%;
        }

            .eachDetails p {
                font-size: 17px;
                margin-top: -2%;
            }
        /****************/
        /* Team Ends*/
        /******************/

        hr {
            margin-top: 5%;
            margin-bottom: 3%;
        }

        /****************
        quotes Section STarts
        ******************/

        .quotesPartsStarts {
            background-color: rgba(22, 24, 22, 0.925);
            padding-bottom: 8%;
            padding-top: 8%;
            width: 1200px;
        }

        .eachquotesSection {
            width: 80%;
            margin-left: 11%;
        }

        .quotesRight {
        }

            .quotesRight h3 {
                color: rgb(255, 0, 55);
                margin-top: 9%;
                margin-left: 10%;
            }

            .quotesRight p {
                color: rgb(216, 214, 180);
            }

        .quotesInfo {
            width: 60%;
            margin-left: 10%;
        }

        .quotesRight a {
            text-decoration: none;
            font-size: 17px;
        }


        .quotesLeft {
            width: 100%;
            margin: 20px;
            height: 300px;
            box-shadow: 0px 0px 20px rgb(70, 65, 65);
            overflow: hidden;
            position: relative;
            float: left;
            display: inline-block;
            cursor: pointer;
            border-radius: 3px;
        }

            .quotesLeft img {
                width: 100%;
                height: 100%;
            }

        .quotesLeftImg {
            height: 100%;
            width: 100%;
            background-size: cover;
            background-repeat: no-repeat;
            -webkit-transition: all .5s;
            -moz-transition: all .5s;
            -o-transition: all .5s;
            transition: all .5s;
        }

        .eachquotesSection:hover .quotesLeftImg, .eachquotesSection:focus .quotesLeftImg {
            -ms-transform: scale(1.2);
            -moz-transform: scale(1.2);
            -webkit-transform: scale(1.2);
            -o-transform: scale(1.2);
            transform: scale(1.2);
        }

            .eachquotesSection:hover .quotesLeftImg:before, .eachquotesSection:focus .quotesLeftImg:before {
                display: block;
            }

        .quotesLeftImg:before {
            content: "";
            display: none;
            height: 100%;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            background-color: rgba(52,73,94,0.75);
        }



        /****************
        quotes Section Ends
        ******************/
        .Allteams {
            background-color: rgba(22, 24, 22, 0.925);
            padding-bottom: 7%;
        }

            .Allteams h1 {
                color: wheat;
                margin-top: -0%;
                padding-top: 5%;
                padding-bottom: 2%;
            }

            .Allteams .recentTeams {
                display: grid;
                grid-template-columns: repeat(3,1fr);
                margin-left: -3%;
            }

        /******************
        *******************
        **Add Starts ******
        ******************/
        .rightPart {
            background-color: rgb(22, 21, 21);
            width: 374px;
        }

        .addPart {
            width: 70%;
            margin: 20px;
            height: 300px;
            overflow: hidden;
            position: relative;
            float: left;
            display: inline-block;
            cursor: pointer;
            margin-top: 17%;
            border-radius: 7px;
        }

        .addPartImg {
            height: 100%;
            width: 100%;
            background-size: cover;
            background-repeat: no-repeat;
            -webkit-transition: all .5s;
            -moz-transition: all .5s;
            -o-transition: all .5s;
            transition: all .5s;
        }

            .addPartImg a {
                display: none;
                font-size: 35px;
                color: #ffffff !important;
                font-family: sans-serif;
                text-align: center;
                margin: auto;
                position: absolute;
                top: 0;
                left: 0;
                bottom: 0;
                right: 0;
                height: 50px;
                cursor: pointer;
                /*text-decoration: none;*/
            }

        .addPart:hover .addPartImg:before, .addPart:focus .addPartImg:before {
            display: block;
        }

        .addPart:hover .addPartImg a, .addPart:focus .addPartImg a {
            display: block;
        }

        .addPartImg:before {
            content: "";
            display: none;
            height: 100%;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            background-color: rgba(52,73,94,0.75);
        }



        /* Several different images */
        .add-one {
            background-image: url('/Content/Teams/addImg1.jpg');
        }

        .add-two {
            background-image: url('/Content/Teams/addImg2.jpg');
        }

        .add-three {
            background-image: url('/Content/Teams/addImg2.jpg');
        }


        /******************
          *******************
          **Add Ends ******
          ******************/





        /******************
          *******************
          Team Advice Starts******
        ******************/





        .teamAdviceSection {
            padding: 10% 2% 5% 2%;
            background-color: rgba(162, 173, 150, 0.308);
        }

        .media {
            background-position: center;
            background-size: cover;
            height: 100%;
            position: absolute;
            transition: all 0.3s ease;
            width: 100%;
        }

        .left .media {
            background-image: url('/Content/Teams/teamPic1.jpg');
        }

        .right .media {
            background-image: url('/Content/Teams/teamPic2.jpg');
        }

        figure {
            height: 370px;
            overflow: hidden;
            position: relative;
        }

            figure a {
                height: 100%;
                left: 0;
                position: absolute;
                top: 0;
                width: 100%;
                z-index: 3;
            }

            figure:hover .media {
                transform: scale(1.25);
            }

        figcaption {
            color: #252830;
            height: calc(100% - 30px);
            margin: 15px;
            left: 0;
            position: absolute;
            top: 0;
            width: 250px;
        }

        .body {
            background-color: white;
            bottom: 0;
            padding: 15px;
            position: absolute;
            width: 100%;
        }

        svg {
            height: inherit;
            width: 100%;
        }

            svg text {
                text-anchor: middle;
            }

            svg #alpha {
                fill: white;
            }

            svg .title {
                font-size: 28px;
                font-family: "Montserrat";
                letter-spacing: 5px;
            }

        .left svg #base {
            fill: white;
            -webkit-mask: url(#leftMask);
            mask: url(#leftMask);
        }

        .right svg #base {
            fill: white;
            -webkit-mask: url(#rightMask);
            mask: url(#rightMask);
        }






        /******************
          *******************
          Team Advice Ends******
        ******************/



    </style>


</head>
<section class="">
    <section>
