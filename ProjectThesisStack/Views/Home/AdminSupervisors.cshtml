@using ProjectThesisStack.Models ;
@model ProjectThesisStack.Models.Supervisor
@{
    ViewBag.Title = "AdminSupervisors";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}



<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE =edge">
    <meta name="viewport" content="width =device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <style>
        body {
            background: rgb(0,0,0);
            background: linear-gradient(90deg, rgba(0,0,0,1) 9%, rgba(24,24,24,1) 20%, rgba(65,58,58,1) 28%, rgba(199,181,181,1) 50%, rgba(64,59,59,1) 72%, rgba(24,24,24,1) 80%, rgba(14,14,14,1) 91%);
            background-position: center;
            background-size: auto;
            opacity: 10;
            background-repeat: no-repeat;
        }

        .input-form {
            margin-top: 50px;
        }


        .header {
            width: 1000px;
            background-color: rgba(0,0,0,0.8);
            margin: auto;
            padding: 2% 0% 1% 0%;
            text-align: center;
            border-radius: 15px 15px 0 0;
            color: rgb(223, 8, 62);
            text-transform: uppercase;
            font-weight: 500;
            font-size: 40px;
        }

        .input-fields {
            background-color: rgba(31, 29, 29, 0.9);
            width: 1000px;
            margin: auto;
            box-shadow: 0px 0px 20px rgb(27, 25, 25);
            border-radius: 0 0 15px 15px;
            border: 1px solid rgba(255, 0, 0, 0);
        }



        .field, .dropdown {
            border-radius: 15px;
            padding: 8px 10px;
            /*  margin: 5px auto;*/
            background-color: rgba(0,0,0,0.6);
            margin: 0% 0% 2% 3%;
            border: 0;
            background: none;
            display: block;
            text-align: center;
            border: 2px solid #3498db;
            /* padding: 5% 5% 5% 5%;*/
            width: 950px;
            outline: none;
            color: white;
            border-radius: 24px;
            transition: 0.25s;
        }

            .field:focus {
                border-color: #2ecc71;
            }

        .dropdown {
            width: 775px;
        }

        .submit-button {
            border: 0;
            background: none;
            display: block;
            text-align: center;
            border: 2px solid #2ecc71;
            padding: 8px 10px;
            outline: none;
            color: white;
            border-radius: 24px;
            transition: 0.25s;
            cursor: pointer;
            font-size: 14px;
            width: 180px;
            margin: 4% 0% 4% 42%;
        }

            .submit-button:hover {
                background: #2ecc71
            }

        label {
            color: gray;
            
        }
    </style>
</head>


<section class="addSupervisor" onload="clearForm()"  style="margin-top:5%;">
    <form method="post">
        <div class="input-form">
            <div class="header">
                <p>Add New Supervisor</p>
            </div>

            <div class="input-fields">

                @Html.TextBoxFor(m => m.name, new
                {
                    @class = "field",
               @id = "name",
                    placeholder = "Supervisor Name",
                    required = "required",
               type = "text",
                    name = "name"
           })
                @Html.TextBoxFor(m => m.email, new
                {
                    @class = "field",
               @id = "email",
                    type = "email",
                    placeholder = "Email (aust domain)",
               required = "required",
               name = "email"
           })
                @Html.TextBoxFor(m => m.password, new
                {
                    @class = "field",
               @id = "password",
                    placeholder = "Password",
                    required = "required",
               name = "password",
               type = "password"
           })

                <br />
                <div class="btn-group" style="margin-left:13%;">
                    <div class="form-group">
                        <label>Select Department</label>
                        @Html.DropDownListFor(m => m.department,
                          new SelectList(Enum.GetValues(typeof(departmentType))))
                    </div>
                </div>
                <br />

                @Html.TextBoxFor(m => m.roomNo, new
                {
                    @class = "field",
               ype = "text",
                    name = "roomNo",
               @id = "roomNo",
                    placeholder = "Room No."
                })

                @Html.TextBoxFor(m => m.designation, new
                {
                    @class = "field",
                    @id = "designation",
               placeholder = "designation",
                    required = "required",
               type = "text",
                    name = "designation"
           })

                @Html.TextBoxFor(m => m.contactNO, new
                {
                    @class = "field",
                    @id = "contactNO",
               placeholder = "Mobile No. 01xxxxxxxxx",
               type = "number",
                    name = "contactNo"
           })
                @Html.TextBoxFor(m => m.dp, new { @class = "field", @id = "dp",
               type = "url", placeholder = "Photograph Link",
               name = "dp"
           })

                

                <input class="submit-button" type="submit" name="submitBtn" value="SUBMIT">

            </div>

        </div>
    </form>
</section>
<script>
    function clearForm() {
        document.getElementById("name").value = "";
        document.getElementById("email").value = "";
        document.getElementById("password").value = "";
        document.getElementById("designation").value = "";
        document.getElementById("roomNo").value = "";
        document.getElementById("contactNO").value = "";
        document.getElementById("dp").value = "";
    }
</script>

<script src="~/bundles/jquery-3.3.1.min.js"></script>
<script src="~/bundles/popper.min.js"></script>
<script src="~/bundles/bootstrap.min.js"></script>
<script src="~/Scripts/JS UI/Notice.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
